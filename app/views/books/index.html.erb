<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>NAME<th>
      <th>BOOK_ID<th>
      <th>ADDRESS<th>
      <th>PRICE_PAID<th>
      <th>MAIL<th>
      <th>PHONE<th>
    </tr>
